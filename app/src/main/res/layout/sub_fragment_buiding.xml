<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <RelativeLayout
        android:id="@+id/top_building"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/layout_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_icon_building"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/return_text_building"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/return_icon_building"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/back"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/pager_title_color" />

        <TextView
            android:id="@+id/toolbar_building"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/pager_title_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/content_building"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_building"
        android:text="Building..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/font_color" />

</RelativeLayout>
